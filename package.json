{
  "name": "tasks",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "test": "node ../../scripts/run-tests todo",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "format:write": "prettier **/*.{json,md} --write",
    "format:test": "prettier **/*.{json,md} --list-different",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "description": "The todo module",
  "keywords": [
    "todo",
    "boilerplate-fm",
    "functional-module"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/izmjs/todo.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "lint-staged": "^9.4.2",
    "husky": "^3.0.8",
    "release-it": "^15.6.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "npm i",
      "pre-commit": "lint-staged && npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0"
  },
  "author": {
    "email": "med.idrissi@outlook.com"
  }
}
